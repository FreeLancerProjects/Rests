<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="#f9f9f9"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="4dp"
                app:contentPadding="3dp"
                app:cardBackgroundColor="@color/colorPrimary"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    android:layout_gravity="center"
                    />
            </android.support.v7.widget.CardView>



        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                />
            <!--<TextView
                android:id="@+id/tv_edit_name"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:text="@string/edit"
                android:gravity="center"
                />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layoutDirection="rtl"
                >
                <ImageView
                    android:id="@+id/image_edit_phone"
                    android:layout_width="0dp"
                    android:layout_weight=".125"
                    android:layout_height="40dp"
                    android:padding="6dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/upd_icon"
                    />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_weight=".75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:inputType="phone"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".125"
                    android:layout_height="40dp"
                    android:src="@drawable/blue_phone_icon"
                    android:padding="5dp"
                    android:layout_gravity="left|center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layoutDirection="rtl"

                >
                <ImageView

                    android:id="@+id/image_edit_email"
                    android:layout_width="0dp"
                    android:layout_weight=".125"
                    android:layout_height="40dp"
                    android:padding="6dp"
                    android:src="@drawable/upd_icon"

                    />
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_weight=".75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:gravity="left"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".125"
                    android:layout_height="40dp"
                    android:src="@drawable/blue_mail_icon"
                    android:padding="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layoutDirection="rtl"

                >
                <ImageView
                    android:id="@+id/image_edit_name"

                    android:layout_width="0dp"
                    android:layout_weight=".125"
                    android:layout_height="40dp"
                    android:padding="6dp"
                    android:src="@drawable/upd_icon"

                    />
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_weight=".75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:gravity="left"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".125"
                    android:layout_height="40dp"
                    android:src="@drawable/person_icon"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layoutDirection="rtl"

                >
                <ImageView
                    android:id="@+id/image_edit_password"

                    android:layout_width="0dp"
                    android:layout_weight=".125"
                    android:layout_height="40dp"
                    android:padding="6dp"
                    android:src="@drawable/upd_icon"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="1111111"
                    android:gravity="left"
                    android:inputType="textPassword"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".125"
                    android:layout_height="40dp"
                    android:src="@drawable/blue_pass_icon"
                    android:padding="5dp"
                    />


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:text="Hi there i'm here using Cruise App"
                />


        </LinearLayout>
    </LinearLayout>
</ScrollView>